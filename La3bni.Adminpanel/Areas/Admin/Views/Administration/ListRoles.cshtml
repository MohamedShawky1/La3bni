@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewBag.Title = "All Roles";

}

<h2>All Roles </h2>

@if (Model.Any())
{
    <a asp-area="Admin" asp-controller="Administration" asp-action="CreateRole">
        Create New Role
    </a>

    <br />
    <br />
    <br />

    <div class="container">

        @foreach (var role in Model)
        {
            <div> Role Id : @role.Id </div>

            <div>  @role.Name </div>

            <div>
                <a asp-controller="Administration" asp-action="EditRole" asp-area="Admin"
                   asp-route-id="@role.Id"> Edit </a>

                <form method="post" asp-action="DeleteRole" asp-controller="Administration"
                      asp-route-id="@role.Id">
                    <input type="submit" value="Delete" class="btn btn-primary" />
                </form>
            </div>
        }
    </div>
}
else
{
    <div>  No roles created yet </div>

    <a asp-controller="Administration" asp-action="CreateRole" asp-area="Admin">
        Create New Role
    </a>
}

@{
    ViewBag.Title = "Not Found";

}

<h2>@ViewBag.ErrorMsg </h2>