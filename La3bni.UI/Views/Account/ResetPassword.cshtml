@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor;
@{
    Layout = null;
}

@section Styles {
    <link rel="stylesheet" href="~/assets/css/login.css" />
    <script src="~/assets/js/login.js"></script>
}
<link rel="stylesheet" href="~/assets/css/login.css" />
<script src="~/assets/js/login.js"></script>


@{
    ViewBag.Title = "Reset my Password";
}

<div class="login-box">
    <h2>Reset Password</h2>

    <div class="row">
        <div class="col-md-4">

            <form asp-action="SendResetPasswordEmail" enctype="multipart/form-data">
                <div class="user-box">
                    <div class="form-group">
                        <input name="Email" type="email" required />
                        <label> Enter Your Email</label>
                    </div>
                </div>
                <br />
                <br />
                <br />
                <div class="Linky">
                    <span></span>
                    <span></span>
                    <span> </span>
                    <span></span>
                    <input type="submit" id="submitt" value="Reset my Password" style="color:white" />

                </div>
                <span name="emailValidate" class="text-danger"></span>
            </form>
            
            
        </div>
    </div>
</div>
<script src="~/lib/jquery/jquery.js"></script>
<script src="~/lib/jquery-validate/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>